{
  "name": "async-agent",
  "version": "1.0.0",
  "type": "module",
  "description": "Generic async agent server using Claude Agent SDK with dynamic MCP connections",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "alfred": "./dist/cli/index.js"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "command -v tsc > /dev/null 2>&1 && npm run build || echo 'Skipping build (tsc not available - production install)'",
    "dev": "tsx watch src/index.ts",
    "dev:cli": "tsx src/cli/index.ts",
    "start": "node dist/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "setup": "docker-compose up -d --build && npm install && npm link",
    "setup:cli": "npm run build && npm link"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@anthropic-ai/sdk": "^0.32.1",
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.2",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "eventsource": "^4.1.0",
    "express": "^4.18.2",
    "figures": "^6.1.0",
    "gradient-string": "^3.0.0",
    "ink": "^5.2.1",
    "ink-big-text": "^2.0.0",
    "ink-box": "^1.0.0",
    "ink-gradient": "^3.0.0",
    "ink-progress-bar": "^3.0.0",
    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-table": "^3.1.0",
    "ink-text-input": "^6.0.0",
    "ora": "^8.2.0",
    "react": "^18.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
